{% extends "layout.html.twig" %}
{% set reportMenu = true %}

{% block title %}Rapports{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if reports %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Practicien</th>
                    <th>Ville</th>
                    <th>Motif</th>
                </tr>
            </thead>
            {% for report in reports %}
                <tr>
                   
                    <td>{{ report.date }}</td>
                     <td>{{ report.practitioner.name }}</td>
                      <td>{{ report.practitioner.city }}</td>
                       <td>{{ report.assessment }}</td>
                    
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun rapport trouv√©.</div>
{% endif %}   
{% endblock %}
