{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Practiciens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    
                    <th>Type de practicien</th>
                    
                    
                </tr>
            </thead>
            {% for prac in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ prac.practitioner_id}}">  {{ prac.practitioner_first_name}}     {{ prac.practitioner_name}} </a></td>
                    
                   
                    
                    
                    
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun médicament trouvé.</div>
{% endif %}   
{% endblock %}