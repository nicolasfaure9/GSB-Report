{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Practitioners{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom Practicien</th>
                    <th>Type Practicien</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ practitioner.id }}">{{ practitioner.name     }}  {{    practitioner.first_name}}</a></td>
                    <td>{{ practitioner.type_id.type_name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun practicien trouv√©.</div>
{% endif %}   
{% endblock %}