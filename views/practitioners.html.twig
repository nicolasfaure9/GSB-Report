{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Médicaments{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Prénom</th>
                    <th>Type de practicien</th>
                    
                    
                </tr>
            </thead>
            {% for prac in practitioners %}
                <tr>
                    <td>{{ prac.practitioner_name }}</td>
                    <td>{{ prac.practitioner_first_name }}</td>
                    
                    
                    
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun médicament trouvé.</div>
{% endif %}   
{% endblock %}